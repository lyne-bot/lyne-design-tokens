{
  "name": "@sbb-esta/lyne-design-tokens",
  "version": "0.1.0",
  "description": "Managing and publishing design tokens for the lyne design system: https://github.com/lyne-design-system/lyne-components",
  "scripts": {
    "build": "tsx ./build.ts",
    "format": "prettier \"**/*\" --write --ignore-unknown",
    "lint": "npm run lint:yml && npm run lint:js",
    "lint:js": "eslint \"**/*.{js,ts}\"",
    "lint:yml": "eslint \"**/*.{yml,yaml}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyne-design-system/lyne-design-tokens.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lyne-design-system/lyne-design-tokens/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/lyne-design-system/lyne-design-tokens#readme",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "~17.0.0",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "~8.0.1",
    "lint-staged": "^13.0.1",
    "minimist": "~1.2.5",
    "netlify-cli": "~10.5.1",
    "prettier": "2.7.1",
    "simple-git": "~3.7.1",
    "standard-version": "^9.5.0",
    "style-dictionary": "~3.7.0",
    "tsx": "^3.4.3",
    "typescript": "^4.7.3"
  },
  "main": "./dist/js/tokens.cjs",
  "module": "./dist/js/tokens.mjs",
  "typings": "./dist/js/tokens.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/js/tokens.d.ts",
      "node": "./dist/js/tokens.mjs",
      "default": "./dist/js/tokens.mjs",
      "require": "./dist/js/tokens.cjs",
      "sass": "./dist/scss/variables.scss",
      "less": "./dist/less/variables.less"
    },
    "./dist/js/tokens-raw.json": {
      "default": "./dist/js/tokens-raw.json"
    },
    "./package.json": {
      "default": "./package.json"
    },
    "./dist/scss/*": {
      "sass": "./dist/scss/*.scss"
    },
    "./dist/less/*": {
      "less": "./dist/less/*.less"
    }
  },
  "prettier": {
    "singleQuote": true,
    "endOfLine": "lf",
    "printWidth": 100
  },
  "lint-staged": {
    "*.{js,ts,css,scss,json,md,html,yaml,yml}": [
      "prettier --write"
    ],
    "*.{js,ts,yaml,yml}": [
      "eslint --fix"
    ]
  }
}
